# ===== FUNÃ‡ÃƒO DE COMBATE =====
def combate(inimigo, vida_inimigo, ataque_inimigo):
    global vida

    print(f"\nğŸ‘¹ VocÃª enfrenta {inimigo}!")

    while vida > 0 and vida_inimigo > 0:
        print(f"\nSua vida: {vida} | Vida do inimigo: {vida_inimigo}")
        print("1 - Atacar")
        print("2 - Usar poÃ§Ã£o")

        acao = input("Escolha: ")

        if acao == "1":
            dano = random.randint(ataque_base, ataque_base + 3)
            vida_inimigo -= dano
            print(f"VocÃª causa {dano} de dano!")

        elif acao == "2":
            if "PoÃ§Ã£o de Cura" in inventario:
                vida += 6
                inventario.remove("PoÃ§Ã£o de Cura")
                print("VocÃª usou uma PoÃ§Ã£o de Cura (+6 vida).")
            else:
                print("VocÃª nÃ£o tem poÃ§Ãµes!")

        else:
            print("AÃ§Ã£o invÃ¡lida.")
            continue

        if vida_inimigo > 0:
            dano = random.randint(1, ataque_inimigo)
            vida -= dano
            print(f"{inimigo} ataca e causa {dano} de dano!")

    return vida > 0

# ===== MAPA / JOGO PRINCIPAL =====
